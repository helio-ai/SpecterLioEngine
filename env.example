NODE_ENV=production

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-chat-agent
DB_NAME=ai-chat-agent

# Redis (optional but supported)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI / LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
OPENAI_ORG_ID=

# Agent behavior
AGENT_TEMPERATURE=0
AGENT_MAX_TOKENS=4000
AGENT_MEMORY_ENABLED=true
AGENT_RETRY_ENABLED=true
AGENT_MAX_RETRIES=3
MAX_SESSIONS=1000
SESSION_TIMEOUT=3600000
MEMORY_LIMIT=50

# Third-party APIs (optional)
GOOGLE_API_KEY=
STRIPE_API_KEY=

# Auth
JWT_SECRET=
JWT_EXPIRY=7

# Logging
LOG_LEVEL=info